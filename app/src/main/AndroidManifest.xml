<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Launcher">
        <activity
            android:name=".TransitionActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|smallestScreenSize|screenLayout|density"
            android:exported="false"
            android:label="@string/set_transition"
            android:theme="@style/AppTheme.Launcher.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".EditorActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|smallestScreenSize|screenLayout|density"
            android:exported="false"
            android:label="@string/photo_editor"
            android:theme="@style/AppTheme.Launcher.NoActionBar" />
        <activity
            android:name=".SettingsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|smallestScreenSize|screenLayout|density"
            android:exported="false"
            android:label="@string/slideshow_settings"
            android:theme="@style/AppTheme.Launcher.NoActionBar" />
        <activity
            android:name=".AboutActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|smallestScreenSize|screenLayout|density"
            android:label="@string/title_activity_about"
            android:theme="@style/AppTheme.Launcher.NoActionBar" />
        <activity
            android:name=".SlideshowActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|smallestScreenSize|screenLayout|density"
            android:label="@string/title_activity_slideshow"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|smallestScreenSize|screenLayout|density"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>